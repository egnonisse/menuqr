{
  "buildCommand": "node scripts/build-with-db.js",
  "installCommand": "npm install",
  "env": {
    "SKIP_ENV_VALIDATION": "1"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": { 
        "maxDuration": 300,
        "functions": {
          "app/**": {
            "maxDuration": 60
          }
        }
      }
    }
  ]
} 